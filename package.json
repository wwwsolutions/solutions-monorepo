{
  "name": "solutions-monorepo",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Domagoj-Mario Mendas <developer.domagoj.mendas@gmail.com> (https://github.com/wwwsolutions)",
  "main": "dist/apps/functions/main.js",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "init-db": "ts-node -P ./tools/database/init-db.tsconfig.json ./tools/database/init-db.ts",
    "ng": "ng",
    "nx": "nx",
    "test": "npm run postinstall.web && ng test",
    "lint": "nx workspace-lint && ng lint",
    "clean": "rm -rf node_modules",
    "clean:build": "rm -rf dist/apps",
    "resolution": "npx npm-force-resolutions",
    "affected": "nx affected",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:e2e": "nx affected:e2e",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "format": "nx format:write",
    "format:write": "nx format:write",
    "format:check": "nx format:check",
    "update": "ng update @nrwl/workspace",
    "update:check": "ng update",
    "workspace-schematic": "nx workspace-schematic",
    "dep-graph": "nx dep-graph",
    "help": "nx help",
    "postinstall.web": "node tools/web/postinstall",
    "presetup": "npm run clean",
    "setup": "npm run resolution && npm install && npm prune",
    "rebuild": "npm run clean && npm install && ng build admin-app && ng build client-app",
    "serve:admin-app": "npm run postinstall.web && ng serve admin-app --port=4200 --open",
    "serve:client-app": "npm run postinstall.web && ng serve client-app --port=4201 --open",
    "serve:all": "concurrently --kill-others \"npm run postinstall.web && ng serve admin-app --port=4200 --open\" \"npm run postinstall.web && ng serve client-app --port=4201 --open\"",
    "build:admin-app": "npm run postinstall.web && ng build admin-app",
    "build:client-app": "npm run postinstall.web && ng build client-app",
    "build:functions": "npm run postinstall.web && ng build functions",
    "build:all": "npm run postinstall.web && ng build admin-app && ng build client-app && ng build functions",
    "test:admin-app": "ng e2e admin-app-e2e --watch",
    "test:client-app": "ng e2e client-app-e2e --watch",
    "test:all": "ng e2e",
    "firebase:serve": "concurrently --kill-others \"yarn run build:functions --watch\" \"firebase serve\"",
    "firebase:serve:functions": "concurrently --kill-others \"yarn run build:functions --watch\" \"firebase serve --only functions\"",
    "firebase:shell": "concurrently --kill-others \"yarn run build:functions --watch\" \"firebase functions:shell\" --raw",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:deploy:admin-app": "firebase deploy --only hosting:admin",
    "firebase:deploy:client-app": "firebase deploy --only hosting:client",
    "firebase:deploy:hosting": "firebase deploy --only hosting"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.2.14",
    "@angular/common": "^8.2.14",
    "@angular/compiler": "^8.2.14",
    "@angular/core": "^8.2.14",
    "@angular/fire": "^5.2.3",
    "@angular/forms": "^8.2.14",
    "@angular/platform-browser": "^8.2.14",
    "@angular/platform-browser-dynamic": "^8.2.14",
    "@angular/router": "^8.2.14",
    "core-js": "^3.6.0",
    "firebase": "^7.6.1",
    "firebase-admin": "^8.9.0",
    "firebase-functions": "^3.3.0",
    "rxjs": "~6.5.3",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.803.21",
    "@angular/cli": "8.3.21",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/language-service": "^8.2.14",
    "@nrwl/angular": "~8.10.1",
    "@nrwl/cypress": "8.10.1",
    "@nrwl/jest": "8.10.1",
    "@nrwl/node": "^8.9.0",
    "@nrwl/schematics": "^8.9.0",
    "@nrwl/workspace": "8.10.1",
    "@nstudio/angular": "8.1.1",
    "@nstudio/web-angular": "^8.0.15",
    "@nstudio/xplat": "^8.0.15",
    "@types/jest": "24.0.24",
    "@types/node": "~12.12.21",
    "codelyzer": "~5.2.1",
    "concurrently": "^5.0.2",
    "cypress": "3.8.0",
    "dotenv": "8.2.0",
    "eslint": "6.8.0",
    "jest": "24.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.19.1",
    "ts-jest": "24.2.0",
    "ts-node": "~8.5.4",
    "tslint": "~5.20.1",
    "typescript": "~3.4.5",
    "wait-on": "~3.3.0",
    "serialize-javascript": "^2.1.1",
    "jest-preset-angular": "^7.1.1",
    "yarn": "^1.21.1"
  },
  "xplat": {
    "prefix": "admin",
    "framework": "angular"
  },
  "resolutions": {
    "serialize-javascript": "^2.1.1"
  }
}
