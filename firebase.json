{
  "functions": {
    "predeploy": ["ng lint functions", "npm run build:functions"],
    "source": "/"
  },
  "hosting": {
    "public": "dist/apps/client-app",
    "ignore": [
      "package-lock.json",
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "server"
      }
    ]
  }
}
